      <script>
        (() => {
          const hour = new Date().getHours();
          let label = "Good morning";
          let iconSrc = "/img/icons/lucide-sun.svg";

          if (hour >= 11 && hour < 17) {
            label = "Good afternoon";
            iconSrc = "/img/icons/lucide-sun.svg";
          } else if (hour >= 17 && hour < 21) {
            label = "Good evening";
            iconSrc = "/img/icons/lucide-sunset.svg";
          } else if (hour >= 21 || hour < 5) {
            label = "Good night";
            iconSrc = "/img/icons/lucide-moon.svg";
          }

          document.write(
            `<h2 class="greeting">
              <span class="greeting__text">${label}</span>
              <img class="greeting__icon" src="${iconSrc}" alt="" aria-hidden="true">
            </h2>`
          );
        })();
      </script>
